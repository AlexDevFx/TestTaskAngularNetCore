{
  "compilerOptions": {
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es6", "dom" ],
    "mapRoot": "./src",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./public",
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": [ "./src/app/*" ],
      "@node_modules/*": [ "./node_modules/*" ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
